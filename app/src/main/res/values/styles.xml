<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@android:color/white</item>
    </style>

    <style name="FirstScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@android:color/white</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@android:color/white</item>
    </style>

    <style name="CenteredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CenteredButton.Bottom">
        <item name="android:layout_marginBottom">70dp</item>
    </style>

    <style name="LoginTheme.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginTheme.InputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>

    <style name="LoginTheme.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LoginTheme.EditText.User">
        <item name="android:drawableStart">@drawable/ic_face_black</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="LoginTheme.EditText.Password">
        <item name="android:drawableStart">@drawable/ic_lock_outline_black</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="LoginTheme.EditText.Email">
        <item name="android:drawableStart">@drawable/ic_mail_outline_black</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="LoginTheme.EditText.Code">
        <item name="android:drawableStart">@drawable/ic_dialpad_black</item>
        <item name="android:inputType">numberPassword</item>
    </style>

    <style name="LoginTheme.FormText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LoginTheme.FormText.Link">
        <item name="android:textColor">@color/colorLink</item>
        <item name="android:layout_marginTop">35dp</item>
    </style>

    <style name="LoginTheme.FormText.Paragraph">
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DashboardFABLabel">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TextView.Date">
        <item name="android:drawableLeft">@drawable/ic_date</item>
    </style>

    <style name="AppTheme.TextView.Time">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:drawableLeft">@drawable/ic_time</item>
    </style>

    <style name="AppTheme.InputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.EditText.TaskName">
        <item name="android:drawableStart">@drawable/ic_task_name</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="AppTheme.EditText.TaskLocation">
        <item name="android:drawableStart">@drawable/ic_location</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="AppTheme.EditText.ProjectName">
        <item name="android:drawableStart">@drawable/ic_project_name</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="AppTheme.EditText.ProjectClient">
        <item name="android:drawableStart">@drawable/ic_group</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="AppTheme.EditText.ProjectDescription">
        <item name="android:drawableStart">@drawable/ic_description</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">5</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="AppTheme.ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="AppTheme.Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

</resources>
